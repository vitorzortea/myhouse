#add-session
    h1
        max-width: 150px
        width: 100%
        display: table
        margin: 0 auto 10px
    h2
        text-align: center
        font-weight: bold
        font-size: 28px
        color: #273b49
        padding-bottom: 30px

    form
        display: flex
        flex-wrap: wrap
        padding: 20px
        margin: 0 auto
        width: 100%
        max-width: 500px
        label
            padding: 0 10px
            width: 50%
            p
                font-weight: 500
                padding: 15px 0 5px
            input, textarea
                width: 100%
                padding: 5px
                background: white
                box-shadow: 1px 1px 5px 1px rgba(0,0,0,0.2)

            &:last-child
                width: 100%
                textarea
                    max-width: 100%
                    min-width: 100%
                    height: 5em
                    max-height: 5em
                    min-height: 5em

    
    button
        margin: 20px auto 0
        display: table
        background-color: #e5388e
        color: white
        padding: 5px 20px
        border-radius: 20px
        font-weight: 600
        text-transform: uppercase
        i
            font-size: 1.2em
            vertical-align: middle
            margin-right: 10px
        